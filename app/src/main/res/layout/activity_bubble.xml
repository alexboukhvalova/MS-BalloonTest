<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bubble"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cmsc436.bubbletest.BubbleActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="debug"
        android:id="@+id/debugNarrator" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/showResult"/>

    <Button

        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/bubble"
        android:background="@drawable/circle_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="START"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:background="@drawable/circle_btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/startTrial" />

    <Button
        android:id="@+id/helpButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/question_mark_no_bg"
        android:onClick="showInstructions"/>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/resultScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <RelativeLayout
            android:id="@+id/resultsRowOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/promptOne"
                style="@style/ResultsPrompt"
                android:text="@string/promptOne" />
            <Button
                android:id="@+id/balloons_tv"
                style="@style/ResultsCircle"
                android:layout_toRightOf="@+id/promptOne"
                android:text="0" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/resultsRowTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resultsRowOne">

            <TextView
                android:id="@+id/promptTwo"
                android:text="@string/promptTwo"
                style="@style/ResultsPrompt"/>
            <Button
                android:id="@+id/seconds_tv"
                android:text="0.00"
                style="@style/ResultsCircle"
                android:layout_toRightOf="@id/promptTwo"/>
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>
